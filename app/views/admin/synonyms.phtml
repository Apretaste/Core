<!-- Modal for add/edit a word and its synonys -->
<div id="manageWord" class="modal fade" role="dialog">
	<form action="/admin/manageWordSubmit" method="POST">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">New word</h4>
				</div>
				<div class="modal-body">
					<!-- Word -->
					<div class="form-group">
						<label for="word">New word</label>
						<input id="word" type="text" name="word" class="form-control" required />
					</div>

					<!-- Synonyms -->
					<div class="form-group">
						<label for="synonyms">Comma separated list of synonyms</label>
						<input id="synonyms" type="text" name="synonyms" class="form-control" required />
