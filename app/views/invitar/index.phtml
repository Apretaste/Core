					url: "<?= $wwwhttp ?>/invitar/check?text="+text,
					async: false
				}).done(function(data) {
					ret = $.trim(data) == "true";
					if( ! ret) $('#error-captcha').show();
				});	

				// if right, show loading
				if(ret) {
					$('#submitBtn').html("Invitando ...");
				}

				return ret;
			}
